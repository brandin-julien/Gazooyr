<div class="textile-text">
  <%= @new.title %><br>
  <%= @new.summary %><br>
  <%= @new.content %>

  <% if user_signed_in? %>
      <div>
        <%= @comments.count %> Commentaire(s)
        <% @comments.each do |new| %>
            <p>
              <%= new.comment %><br>
            </p>
        <% end %>
        <h5>Ajouter un commentaire :</h5>
        <%= form_for(@new_comment, url: comments_path,:html => { :method => :post }) do |f| %>
            <%= f.label :comment %>
            <%= f.text_field :comment %>
            <div class="field">
              <%= f.hidden_field :new_id, :value => @new.id %>
            </div>
            <div class="actions">
              <%= f.submit "Envoyer" %>
            </div>
            <% end %>
      </div>
  <% end %>
</div>

